@model RinohDevelopment.ViewModels.OrderCleaningServiceViewModel
@{
ViewData["Title"] = "سفارش سرویس نظافت";
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">سفارش سرویس نظافت</h4>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h5>@Model.ServiceName</h5>
                <p class="text-primary">قیمت: @Model.ServicePrice.ToString("N2") میلی‌گرم طلا</p>
            </div>

            <form asp-action="OrderCleaningService" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ServiceId" />
                <input type="hidden" asp-for="ServiceName" />
                <input type="hidden" asp-for="ServicePrice" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ServiceDate" class="form-label">تاریخ سرویس</label>
                        <input asp-for="ServiceDate" class="form-control" type="date" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="ServiceDate" class="text-danger"></span>
                        <small class="text-muted">تاریخ سرویس باید حداقل یک روز بعد از امروز باشد.</small>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-8">
                        <label asp-for="ServiceAddress" class="form-label">آدرس سرویس</label>
                        <textarea asp-for="ServiceAddress" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="ServiceAddress" class="text-danger"></span>
                    </div>
                </div>

                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> با تأیید این سفارش، مبلغ @Model.ServicePrice.ToString("N2") میلی‌گرم طلا از اعتبار شما کسر خواهد شد.
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="CleaningServices" class="btn btn-secondary me-2">انصراف</a>
                    <button type="submit" class="btn btn-primary">تأیید و ثبت سفارش</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}