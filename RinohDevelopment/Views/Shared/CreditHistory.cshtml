@model RinohDevelopment.Controllers.CreditHistoryViewModel
@{
    ViewData["Title"] = "تاریخچه اعتبار";
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">تاریخچه اعتبار</h4>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h5>اعتبار فعلی: <span class="fw-bold">@Model.CurrentCredit.ToString("N2") میلی‌گرم طلا</span></h5>
            </div>

            @if (!Model.Transactions.Any())
            {
                <div class="alert alert-info">
                    هیچ تراکنشی در تاریخچه شما ثبت نشده است.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>تاریخ</th>
                                <th>نوع</th>
                                <th>مقدار</th>
                                <th>توضیحات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.Transactions)
                            {
                                <tr>
                                    <td>@transaction.Date.ToString("yyyy/MM/dd HH:mm")</td>
                                    <td>
                                        <span class="badge @(transaction.Type == TransactionType.Credit ? "bg-success" : "bg-danger")">
                                            @transaction.TypeDisplay
                                        </span>
                                    </td>
                                    <td>@transaction.Amount.ToString("N2") میلی‌گرم طلا</td>
                                    <td>@transaction.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>