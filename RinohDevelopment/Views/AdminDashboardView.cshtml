@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RinohDevelopment.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "داشبورد مدیریت";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h2 class="mb-4">داشبورد مدیریت</h2>
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">درخواست های در انتظار</h5>
                    <p class="card-text display-4">@Model.PendingRequestsCount</p>
                    <a asp-action="Requests" class="btn btn-light">مشاهده</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">زمان های سرویس آینده</h5>
                    <p class="card-text display-4">@Model.UpcomingTimeSlotsCount</p>
                    <a asp-action="TimeSlots" class="btn btn-light">مشاهده</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">تعداد مدیران</h5>
                    <p class="card-text display-4">@Model.AdminsCount</p>
                    <a asp-action="Administrators" class="btn btn-light">مشاهده</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    اقدامات سریع
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a asp-action="CreateTimeSlot" class="list-group-item list-group-item-action">
                            <i class="bi bi-calendar-plus"></i> افزودن زمان سرویس جدید
                        </a>
                        <a asp-action="Requests" class="list-group-item list-group-item-action">
                            <i class="bi bi-list-check"></i> مدیریت درخواست ها
                        </a>
                        <a asp-action="CreateAdmin" class="list-group-item list-group-item-action">
                            <i class="bi bi-person-plus"></i> افزودن مدیر جدید
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>